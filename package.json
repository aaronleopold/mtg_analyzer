{
  "name": "mtg_analyzer",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev:frontend": "yarn workspace @mtg/frontend run dev",
    "dev:backend": "yarn workspace @mtg/backend run dev",
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "install:frontend": "cd packages/frontend && yarn",
    "install:backend": "cd packages/backend && yarn",
    "install:all": "concurrently \"yarn install:backend\" \"yarn install:frontend\""
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true
}
